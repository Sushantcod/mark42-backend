datasource db { provider = "postgresql" url = env("DATABASE_URL") }
generator client { provider = "prisma-client-js" }
model User { id String @id @default(uuid()) email String @unique? display String? createdAt DateTime @default(now()) themes Theme[] projects Project[] achievements Achievement[] stats StatsSnapshot[] }
model Theme { id String @id @default(uuid()) name String json Json userId String user User @relation(fields:[userId], references:[id]) }
model Project { id String @id @default(uuid()) title String description String? userId String user User @relation(fields:[userId], references:[id]) }
model Achievement { id String @id @default(uuid()) key String title String description String? earnedAt DateTime userId String user User @relation(fields:[userId], references:[id]) }
model StatsSnapshot { id String @id @default(uuid()) userId String platform String payload Json snapshotTime DateTime @default(now()) user User @relation(fields:[userId], references:[id]) }
